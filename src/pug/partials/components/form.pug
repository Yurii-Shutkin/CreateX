.container 
    .form
        .form__wrap 
            h3.form__title A quick way to discuss details
            .form__input-wrap 
                .form__input-item 
                    label(for="name" class="form__label") Name*
                    input.form__input(type="text", name="name", id="name", placeholder="Your name")
                    img.form__input-img.form__input--success-img(src=`${paths.img.icons}/done-mark.svg` alt="success")
                    img.form__input-img.form__input--danger-img(src=`${paths.img.icons}/danger-icon.svg` alt="danger")
                    span.form__message.form__message--success Looks good!
                    span.form__message.form__message--danger Please provide a valid input.
                .form__input-item 
                    label(for="phone" class="form__label") Phone*
                    input.form__input(type="tel", name="phone", id="phone", placeholder="Your phone number")
                    img.form__input-img.form__input--success-img(src=`${paths.img.icons}/done-mark.svg` alt="success")
                    img.form__input-img.form__input--danger-img(src=`${paths.img.icons}/danger-icon.svg` alt="danger")
                    span.form__message.form__message--success Looks good!
                    span.form__message.form__message--danger Please provide a valid input.
                .form__input-item 
                    label(for="mail" class="form__label") Email
                    input.form__input(type="email", name="mail", id="mail", placeholder="Your working email")
                    img.form__input-img.form__input--success-img(src=`${paths.img.icons}/done-mark.svg` alt="success")
                    img.form__input-img.form__input--danger-img(src=`${paths.img.icons}/danger-icon.svg` alt="danger")
                    span.form__message.form__message--success Looks good!
                    span.form__message.form__message--danger Please provide a valid input.
                .form__input-item 
                    label(for="message" class="form__label") Message*
                    textarea.form__input.form__input--textarea(name="message", id="message", placeholder="Your message")
                    img.form__input-img.form__input--success-img(src=`${paths.img.icons}/done-mark.svg` alt="success")
                    img.form__input-img.form__input--danger-img(src=`${paths.img.icons}/danger-icon.svg` alt="danger")
                    span.form__message.form__message--success Looks good!
                    span.form__message.form__message--danger Please provide a valid input.
                      
                .form__input-item.form__input-item--checkbox
                    input.form__input.form__input--checkbox(type="checkbox", name="agreement", id="agreement")
                    label.form__label.form__label--checkbox(for="agreement") 
                        span.box
                        span.text I agree to receive communications from Createx Construction Bureau.
                button(type="submit" class="form__button button") send request
script(type="module", src="/js/components/form.js") 
